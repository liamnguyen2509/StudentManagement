@{
    ViewBag.Title = "Home Page";
}

<div class="page-content">
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <i class="fa fa-home"></i>
                <a href="@Url.Action("Index", "Home")">Home</a>
                <i class="fa fa-angle-right"></i>
            </li>
            <li>
                <a href="#">Students</a>
            </li>
        </ul>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-list-ul"></i>Students
                    </div>
                    <div class="actions">
                        <a href="@Url.Action("Register")" class="btn btn-default btn-sm btn-add-new">
                            <i class="fa fa-plus"></i> Register
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-striped table-bordered table-hover responsive" id="tb_students">
                        <thead>
                            <tr>
                                <th class="col-md-1">S/N</th>
                                <th class="col-md-2">NRIC</th>
                                <th class="col-md-3">Name</th>
                                <th class="col-md-2">Gender</th>
                                <th class="col-md-2">Age</th>
                                <th class="col-md-2">NO. of Subjects</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Content/assets/global/plugins/select2/select2.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/assets/global/plugins/datatables/datatables.all.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Content/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js")"></script>
    <script src="@Url.Content("~/Content/assets/global/plugins/datatables/extensions/Responsive/js/dataTables.responsive.min.js")"></script>
}

@section pageScripts{
    <script src="@Url.Content("~/Scripts/pages/students.js")"></script>
    <script type="text/javascript">
    $(document).ready(function() {
        STUDENTS.url_list = "@Url.Action("GetStudents", "Home")";
        STUDENTS.url_edit = "@Url.Action("Update", "Home")";
        STUDENTS.init_page();
    })
    </script>
}